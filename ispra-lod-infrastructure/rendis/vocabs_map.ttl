@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix crml: <http://w3id.org/stlab/crml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix location: <https://dati.isprambiente.it/ontology/location/> .
@prefix rendis: <https://dati.isprambiente.it/ontology/rendis/> .
@prefix core: <https://dati.isprambiente.it/ontology/core/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix wgs84_pos: <http://www.w3.org/2003/01/geo/wgs84_pos#> .
@prefix geosparql: <http://www.opengis.net/ont/geosparql#> .
@prefix indicators: <https://dati.isprambiente.it/ontology/indicators/> .



<#CSV>
  rml:source "{{litology_csv}}" ;
  rml:referenceFormulation ql:CSV;
  crml:separator ";".

<#instability_csv>
  rml:source "{{instability_csv}}" ;
  rml:referenceFormulation ql:CSV;
  crml:separator ";".


<#repair_csv>
  rml:source "{{repair_csv}}" ;
  rml:referenceFormulation ql:CSV;
  crml:separator ";".
  

<#litology>
rml:logicalSource <#CSV>;
  
  rr:subjectMap [
    rr:template "https://dati.isprambiente.it/ld/rendis/lithology/%eval:lower_case(*, cod_litologia)%";
    rr:class rendis:Lithology
  ];

  rr:predicateObjectMap [
    rr:predicate rdfs:label;
    rr:objectMap [
      rml:reference "from_tp_descrizione";
      rr:datatype xsd:string
    ]
  ].

<#ContratLitology>
rml:logicalSource <#CSV>;
  
  rr:subjectMap [
    rr:template "https://dati.isprambiente.it/ld/rendis/contract/%eval:lower_case(*, id_intervento)%_%eval:lower_case(*, id_lotto)%";
  ];

  rr:predicateObjectMap [
    rr:predicate rendis:hasRelatedLithology;
    rr:objectMap [
      rr:parentTriplesMap <#litology>
    ]
  ].


<#instability>
rml:logicalSource <#instability_csv>;
  
  rr:subjectMap [
    rr:template "https://dati.isprambiente.it/ld/rendis/instability/%eval:lower_case(*, cod_dissesto)%";
    rr:class rendis:Instability
  ];

  rr:predicateObjectMap [
    rr:predicate rdfs:label;
    rr:objectMap [
      rml:reference "from_tp_descrizione";
      rr:datatype xsd:string
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate rendis:instabilityType;
    rr:objectMap [
      rml:reference "from_tp_tipo";
      rr:datatype xsd:string
    ]
  ].

<#ContratInstability>
rml:logicalSource <#instability_csv>;
  
  rr:subjectMap [
    rr:template "https://dati.isprambiente.it/ld/rendis/contract/%eval:lower_case(*, id_intervento)%_%eval:lower_case(*, id_lotto)%";
  ];

  rr:predicateObjectMap [
    rr:predicate rendis:hasRelatedInstability;
    rr:objectMap [
      rr:parentTriplesMap <#instability>
    ]
  ].


<#repair>
rml:logicalSource <#repair_csv>;
  
  rr:subjectMap [
    rr:template "https://dati.isprambiente.it/ld/rendis/repair/%eval:lower_case(*, cod_sistemazione)%";
    rr:class rendis:RepairOperation
  ];

  rr:predicateObjectMap [
    rr:predicate rdfs:label;
    rr:objectMap [
      rml:reference "from_tp_descrizione";
      rr:datatype xsd:string
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate rendis:operationType;
    rr:objectMap [
      rml:reference "from_tp_tipo";
      rr:datatype xsd:string
    ]
  ].

<#repair_entityIfBroader>
    rml:logicalSource <#repair_csv>;

    rr:subjectMap [
        rr:template "https://dati.isprambiente.it/ld/rendis/repair/%eval:lower_case(*, cod_sistemazione)%";
  ];

    rr:predicateObjectMap [
    rr:predicate core:broader;
    rr:objectMap [
      rr:parentTriplesMap <#BroaderRepair>
    ]
  ].


<#BroaderRepair>
    rml:logicalSource <#repair_csv>;

    rr:subjectMap [
    rr:template "https://dati.isprambiente.it/ld/rendis/repair/%eval:lower_case(*, from_tp_categoria)%";
    rr:class rendis:RepairOperation
  ];

  rr:predicateObjectMap [
    rr:predicate rdfs:label;
    rr:objectMap [
      rr:template "Intervento Causa %eval:broader_entity(*)%";
      rr:datatype xsd:string
    ]
  ].

<#ContratRepair>
rml:logicalSource <#repair_csv>;
  
  rr:subjectMap [
    rr:template "https://dati.isprambiente.it/ld/rendis/contract/%eval:lower_case(*, id_intervento)%_%eval:lower_case(*, id_lotto)%";
  ];

  rr:predicateObjectMap [
    rr:predicate rendis:hasRelatedRepair;
    rr:objectMap [
      rr:parentTriplesMap <#repair>
    ]
  ].